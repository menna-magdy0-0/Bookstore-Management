@model Book
@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h2 class="mb-3 text-center text-danger">🗑️ Delete Book</h2>

    <div class="card shadow-lg border-danger">
        <div class="card-body">
            <p class="fs-5 text-center text-dark">Are you sure you want to delete this book?</p>

            <div class="alert alert-warning text-center">
                <h4 class="fw-bold">@Model.Title</h4>
                <p><strong>Author:</strong> @Model.Author</p>
                <p><strong>Genre:</strong> @Model.Genre</p>
                <p><strong>Published Date:</strong> @Model.PublishedDate.ToString("yyyy-MM-dd")</p>
            </div>

            <div class="d-flex justify-content-center gap-3">
                <form method="post" asp-action="DeleteConfirmed" asp-controller="Books" asp-route-id="@Model.Id">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </form>

                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="bi bi-arrow-left-circle"></i> Cancel
                </a>
            </div>
        </div>
    </div>
</div>